<div class="row">
  <div class="small-6 large-3 large-offset-3 columns">
    <img src="http://placehold.it/150x150">
  </div>
  <div class="small-6 large-6 columns">
    <h1>Hunny Do</h1>
  </div>
</div>
<div class="row">
  <div class="large-8 large-offset-2">
    <div class="row collapse">
      <%= form_tag("/", method: "post") do %>
      <div class="small-9 columns">
        <%= hidden_field_tag(:task_hash, params[:hash]) %>
        <%= text_field_tag(:task, nil, placeholder: "Dump the trash") %>
      </div>
      <div class="small-3 columns">
        <%= submit_tag("Add", class: "postfix button radius"  ) %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-8 large-offset-2">
    <% @todo.each do |t| %>
    <div class="row collapse">
      <div class="small-2 columns">
        <input id="cb<%= t.id %>" type="checkbox" <%= checked t.task_done %>>
      </div>
      <div id="cb<%= t.id %>-task" class="small-9 small-offset-1 columns <%= checked t.task_done %>">
        <%= t.task %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="large-3 large-offset-7">
    <a href="#" class="button small expand radius">clear completed items</a>
  </div>
</div>